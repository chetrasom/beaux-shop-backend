{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "discountPrice": {
      "type": "decimal",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "thumbnail": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "saving": {
      "type": "integer",
      "required": false
    },
    "stock": {
      "type": "integer"
    },
    "reviews": {
      "type": "integer"
    },
    "rating": {
      "type": "decimal"
    },
    "featured": {
      "type": "boolean"
    },
    "shipping": {
      "type": "boolean"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "stars": {
      "type": "integer"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "collections": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "new_product": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "product_type": {
      "type": "string",
      "required": true
    },
    "brand": {
      "type": "string"
    }
  }
}
